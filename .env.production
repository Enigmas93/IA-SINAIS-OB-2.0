# Production Environment Variables for Vercel
# Copy these to your Vercel dashboard environment variables

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security Keys (CHANGE THESE IN PRODUCTION)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database Configuration
# For production, use PostgreSQL or another cloud database
# DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_URL=sqlite:///trading_bot.db

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=24

# Logging
LOG_LEVEL=INFO

# IQ Option Configuration (if needed)
# IQ_OPTION_EMAIL=your-email@example.com
# IQ_OPTION_PASSWORD=your-password

# API Keys and External Services
# Add your API keys here

# CORS Configuration
CORS_ORIGINS=*

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax